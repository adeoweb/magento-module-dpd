<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">adeoweb_dpd_location_form.location_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="AdeoWeb\Dpd\Block\Adminhtml\Location\Edit\BackButton" name="back"/>
			<button class="AdeoWeb\Dpd\Block\Adminhtml\Location\Edit\DeleteButton" name="delete"/>
			<button class="AdeoWeb\Dpd\Block\Adminhtml\Location\Edit\SaveButton" name="save"/>
			<button class="AdeoWeb\Dpd\Block\Adminhtml\Location\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>adeoweb_dpd_location_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>adeoweb_dpd_location_form.location_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="location_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="AdeoWeb\Dpd\Model\Location\DataProvider" name="location_form_data_source">
			<settings>
				<requestFieldName>location_id</requestFieldName>
				<primaryFieldName>location_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label/>
		</settings>
		<field formElement="select" name="type" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Location</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Type</label>
				<dataScope>type</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AdeoWeb\Dpd\Model\Location\Source\Type"/>
                    </settings>
                </select>
            </formElements>
		</field>
		<field formElement="input" name="name" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Location</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Name</label>
				<dataScope>name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="address" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Location</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Address</label>
				<dataScope>address</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="city" sortOrder="50">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Location</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">City</label>
				<dataScope>city</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field formElement="select" name="country" sortOrder="60">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Location</item>
				</item>
			</argument>
			<settings>
				<dataType>select</dataType>
				<label translate="true">Country</label>
				<dataScope>country</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Directory\Model\Config\Source\Country"/>
                    </settings>
                </select>
            </formElements>
		</field>
		<field formElement="input" name="postcode" sortOrder="70">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Location</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Postcode</label>
				<dataScope>postcode</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field formElement="textarea" name="additional_info" sortOrder="80">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Location</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Additional Info</label>
				<dataScope>additional_info</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="contact_name" sortOrder="90">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Location</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Contact Name</label>
				<dataScope>contact_name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="phone" sortOrder="100">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Location</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Phone</label>
				<dataScope>phone</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="work_until" sortOrder="110">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Location</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Work Until</label>
				<dataScope>work_until</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
					<rule name="time" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
